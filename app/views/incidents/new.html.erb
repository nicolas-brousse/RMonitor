<% content_for :title, "New Incident" %>

<%= form_for([current_server, current_server.incidents.build], :url => server_incidents_path(current_server, @incident), :html => {:class => "form-horizontal"}) do |f| %>
    <%= f.hidden_field :monitoring_id %>
    <fieldset>
        <legend>Add new <%= t(:incident) %></legend>

        <div class="control-group">
            <%= f.label :name, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :name, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :body, :class => "control-label" %>
            <div class="controls">
                <div class="btn-toolbar hide">
                    <div class="btn-group">
                        <a class="btn btn-small" href="#">H1</a>
                        <a class="btn btn-small" href="#">H2</a>
                        <a class="btn btn-small" href="#">H3</a>
                    </div>
                    <a class="btn btn-small" href="#"><i class="icon-list"></i></a>
                    <a class="btn btn-small" href="#"><i class="icon-share"></i></a>
                    <div class="btn-group">
                        <a class="btn btn-small" href="#"><strong>B</strong></a>
                        <a class="btn btn-small" href="#"><em>i</em></a>
                        <a class="btn btn-small" href="#"><u>U</u></a>
                    </div>
                </div>
                <%= f.text_area :body, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="form-actions">
            <%= f.submit "Save changes", :class => "btn btn-primary" %>
            <%= cancel_tag server_incidents_path(current_server) %>
        </div>
    </fieldset>
<% end %>
