
<%= form_for(@incident, :url => server_incident_path(@server, @incident), :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
    <legend><%= t(:incident) %> #<%= @incident.id %></legend>

    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :body, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :body, :class => "input-xlarge" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Save changes", :class => "btn btn-primary" %>
      <%= link_to "Cancel", servers_monitorings_path(@server), :data => {:confirm => "Are you sure?"}, :class => "btn" %>
    </div>
  </fieldset>
<% end %>
