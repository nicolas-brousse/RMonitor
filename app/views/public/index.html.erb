
<% @servers.each do |server| %>
<div class="server">
  <div class="row visible-phone">
    <div class="span12">
      <h2><i class="icon-hdd"></i> <%= link_to server.name, "#" %> <span style="color: <%= server.status ? 'green' : 'red' %>;"><%= server.status ? 'green' : 'red' %></span></h2>
    </div>
  </div>

  <div class="row hidden-phone">
    <div class="span1 offset1">
      <div class="full-circle <%= server.status ? 'green' : 'red' %>">
        <span class="uptime">99.99%</span>
      </div>
    </div>

    <div class="span3">
      <h2 class="name">â€” <%= link_to server.name, "#" %> </h2>
    </div>

    <div class="span7">
      <h4>Last logs</h4>
      <p>https://devcenter.heroku.com/articles/heroku-status-uptime-calculation</p>
    </div>
  </div>
</div>
<% end %>
