<table class="table table-striped">
  <thead>
    <tr>
      <th width="5">Status</th>
      <th width="">Protocol</th>
      <th width="">Last synchronization</th>
      <th width=""></th>
    </tr>
  </thead>
  <tbody>
    <% @monitorings.each do |monitoring| %>
    <tr>
      <td><span class="badge badge-<%= monitoring.status ? 'success' : 'important' %>">&nbsp;</span></td>
      <td><%= monitoring.protocol %></td>
      <td><i class="icon-time"></i> <%= monitoring.created_at %></td>
      <td><i class="icon-list-alt"></i> <%= link_to "history",  servers_monitorings_history_path(@server, monitoring.protocol) %></td>
    </tr>
    <% end %>
  </tbody>
</table>