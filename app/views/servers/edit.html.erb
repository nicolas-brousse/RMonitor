<% content_for :title, "Settings - #{current_server.name}" %>

<div class="page-header">
    <h1>Settings</h1>
</div>

<ul class="nav nav-tabs">
    <li class="active"><a href="#infos" data-toggle="tab">Informations</a></li>
    <li><a href="#modules" data-toggle="tab">Modules</a></li>
    <li><a href="#members" data-toggle="tab">Members</a></li>
    <li><a href="#monitorings" data-toggle="tab">Monitorings</a></li>
</ul>

<%= form_for(current_server, :url => server_path(current_server), :html => {:class => "form-horizontal"}, :remote => true) do |f| %>
<fieldset>
    <div class="tab-content">
        <div class="tab-pane active" id="infos" data-toggle="pill">
            <div class="control-group">
                <%= f.label :name, :class => "control-label" %>
                <div class="controls">
                    <%= f.text_field :name, :class => "input-xlarge" %>
                </div>
            </div>

            <div class="control-group">
                <%= f.label :host, :class => "control-label" %>
                <div class="controls">
                    <%= f.text_field :host, :class => "input-xlarge" %>
                </div>
            </div>

            <hr />

            <div class="control-group">
                <%= f.label :slug, :class => "control-label" %>
                <div class="controls">
                    <%= f.text_field :slug, :disabled => :disabled, :class => "input-large disabled" %>
                </div>
            </div>

            <hr />

            <div class="control-group">
                <%= f.label :is_public, :class => "control-label" %>
                <div class="controls">
                    <%= f.check_box :is_public %>
                </div>
            </div>
        </div> <!-- /#infos -->

        <div class="tab-pane" id="modules" data-toggle="pill">
        </div> <!-- /#modules -->

        <div class="tab-pane" id="members" data-toggle="pill">
        </div> <!-- /#members -->

        <div class="tab-pane" id="monitorings" data-toggle="pill">

            <div class="control-group">
                <%= f.label :monitorings, :class => "control-label" %>
                <div class="controls">
                    <%# f.check_box :monitorings %>
                </div>
            </div>
        </div> <!-- /#monitorings -->
    </div>

    <div class="form-actions">
        <%= f.submit "Save changes", :class => "btn btn-primary" %>
        <%= cancel_tag %>
    </div>
</fieldset>
<% end %>
