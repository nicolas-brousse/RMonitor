
<%= form_for(@server, :url => server_path(@server), :html => {:class => "form-horizontal"}) do |f| %>
    <fieldset>
        <legend>Settings</legend>

        <div class="control-group">
            <%= f.label :name, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :name, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :host, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :host, :class => "input-xlarge" %>
            </div>
        </div>

        <hr />

        <div class="control-group">
            <%= f.label :slug, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :slug, :disabled => :disabled, :class => "input-large disabled" %>
            </div>
        </div>

        <hr />

        <div class="control-group">
            <div class="controls">
                <label for="server_is_public" class="checkbox">
                    <%= f.check_box :is_public %>
                    <%= t :is_public %>
                </label>
            </div>
        </div>

        <div class="form-actions">
            <%= f.submit "Save changes", :class => "btn btn-primary" %>
            <%= link_to "Cancel", :back, :data => {:confirm => "Are you sure?"}, :class => "btn" %>
        </div>
    </fieldset>
<% end %>
