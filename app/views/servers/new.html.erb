
<%= form_for(@server, :url => servers_path(), :html => {:class => "form-horizontal"}) do |f| %>
    <fieldset>
        <legend>New server</legend>

        <div class="control-group">
            <%= f.label :name, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :name, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :host, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :host, :class => "input-xlarge" %>
            </div>
        </div>

            <div class="form-actions">
                <%= f.submit "Save changes", :class => "btn btn-primary" %>
                <%= link_to t(:cancel), :back, :data => {:confirm => "Are you sure?"}, :class => "btn" %>
            </div>
    </fieldset>
<% end %>
