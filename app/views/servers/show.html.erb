<h2><%= @server.name %></h2>

<table class="table table-striped">
  <tbody>
    <tr>
      <th>Host</th>
      <td><i class="icon-hdd"></i> <%= @server.host %></td>
    </tr>
    <tr>
      <th>Last synchronization</th>
      <td><i class="icon-time"></i> <%= @server.synchronized_at %></td>
    </tr>
    <tr>
      <th>Status</th>
      <td><i class="icon-signal"></i> <%= @server.status %></td>
    </tr>
  </tbody>
</table>