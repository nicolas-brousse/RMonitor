<% content_for :title, (@user == current_user ? 'My account' : "Edit user - #{@user.email}") %>

<%= form_for(@user, :url => user_path(@user), :html => {:class => "form-horizontal"}) do |f| %>
    <fieldset>
        <legend><%= yield :title %></legend>

        <div class="control-group">
            <%= f.label :firstname, :class => "control-label" %>
            <div class="controls">
                <%# f.text_field :firstname, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :lastname, :class => "control-label" %>
            <div class="controls">
                <%# f.text_field :lastname, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :email, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :email, :class => "input-xlarge" %>
            </div>
        </div>

        <hr />

        <div class="control-group">
            <%= f.label :password, :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :password_confirmation, :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password_confirmation, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="form-actions">
            <%= f.submit "Save changes", :class => "btn btn-primary" %>
            <%= cancel_tag user_path(@user) %>
        </div>
    </fieldset>
<% end %>

    <hr />

    <p>Cancel my account</p>
