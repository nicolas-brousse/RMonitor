<% content_for :title, "My settings" %>

<div class="page-header">
    <h1><%= yield :title %></h1>
</div>

<%= form_for(@settings, :url => user_preferences_path(), :html => {:class => "form-horizontal"}, :remote => true) do |f| %>
<fieldset>
    <div class="control-group">
        <%= f.label :time_zone, :class => "control-label" %>
        <div class="controls">
            <%= f.time_zone_select :time_zone, nil, {}, :class => "input-xlarge" %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :language, :class => "control-label" %>
        <div class="controls">
            <%# f.select :language, Setting.options_for(:default_language), :class => "input-xlarge" %>
        </div>
    </div>

    <div class="form-actions">
        <%= f.submit "Save changes", :class => "btn btn-primary" %>
        <%= cancel_tag :root %>
    </div>
</fieldset>
<% end %>
