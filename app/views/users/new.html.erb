<% content_for :title, "New user" %>

<%= form_for(@user, :url => create_user_path(), :html => {:class => "form-horizontal"}) do |f| %>
    <fieldset>
        <legend>New user</legend>

        <div class="control-group">
            <%= f.label :email, :class => "control-label" %>
            <div class="controls">
                <%= f.text_field :email, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :password, :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="control-group">
            <%= f.label :password_confirmation, :class => "control-label" %>
            <div class="controls">
                <%= f.password_field :password_confirmation, :class => "input-xlarge" %>
            </div>
        </div>

        <div class="form-actions">
            <%= f.submit "Create", :class => "btn btn-primary" %>
            <%= cancel_tag :admin_users %>
        </div>
    </fieldset>
<% end %>
