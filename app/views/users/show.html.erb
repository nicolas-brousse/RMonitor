<% content_for :title, @user.email %>

<div class="row">
    <div class="span4">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>&nbsp;</th>
                    <td><%= image_tag(gravatar_url(@user, 50), :size => "50x50", :alt => "Avatar", :class => "img-polaroid") %></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><i class="icon-envelope"></i> <%= @user.email %></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="span8">
        <p>&nbsp;</p>
    </div>
</div>
