
<%= form_tag(admin_settings_path(), :method => "get", :html => {:class => "form-horizontal"}) do |f| %>
    <fieldset>
        <legend>Display</legend>

        <div class="control-group">
            <div class="controls">
                <label for="monitoring_is_public" class="checkbox">
                    <%= f.check_box :monitoring_is_public %>
                    <%= t :monitoring_is_public %>
                </label>
            </div>
        </div>

        <div class="form-actions">
            <%= f.submit "Save changes", :class => "btn btn-primary" %>
            <button class="btn">Cancel</button>
        </div>
    </fieldset>
<% end %>
