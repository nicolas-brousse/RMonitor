<% content_for :title, "Settings" %>

<%= form_tag(admin_edit_settings_path(), :class => "form-horizontal", :remote => true) do %>
<fieldset>
    <ul class="nav nav-tabs nav-js">
        <li class="active"><a href="#general">General</a></li>
        <li><a href="#display">Display</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane active" id="general">
            <div class="control-group">
                <%= label_tag :settings_app_title, t(:app_title), :class => "control-label" %>
                <div class="controls">
                    <%= text_field_tag "settings[app_title]", @settings.app_title, :class => "input-xlarge" %>
                </div>
            </div>

            <div class="control-group">
                <%= label_tag :settings_text_formatting, t(:text_formatting), :class => "control-label" %>
                <div class="controls">
                    <%= select_tag "settings[text_formatting]", options_for_select(%w{ markdown textile }, @settings.text_formatting), :class => "input-xlarge" %>
                </div>
            </div>
        </div> <!-- /#general -->

        <div class="tab-pane" id="display">
            <div class="control-group">
                <%= label_tag :settings_ui_theme, t(:ui_theme), :class => "control-label" %>
                <div class="controls">
                    -
                </div>
            </div>

            <div class="control-group">
                <%= label_tag :settings_default_language, t(:default_language), :class => "control-label" %>
                <div class="controls">
                    -
                </div>
            </div>

            <div class="control-group">
                <%= label_tag :settings_monitoring_is_public, t(:monitoring_is_public), :class => "control-label" %>
                <div class="controls">
                    <%= hidden_field_tag "settings[monitoring_is_public]", 0 %>
                    <%= check_box_tag("settings[monitoring_is_public]", 1, @settings.monitoring_is_public?) %>
                </div>
            </div>
        </div> <!-- /#display -->
    </div>

    <div class="form-actions">
        <%= submit_tag "Save changes", :class => "btn btn-primary" %>
        <%= cancel_tag %>
    </div>
</fieldset>
<% end %>