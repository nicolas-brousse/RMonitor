<% content_for :title, t(:server).pluralize %>

<div class="navbar">
    <div class="navbar-inner">
<%= form_tag(admin_servers_path(), :class => "navbar-form pull-left", :method => :get, :id => :servers_search, :remote => true) do %>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>

    <%= fields_for :filter, OpenStruct.new(params[:filter]) do |f| %>
        <%# f.label :search, :class => "control-label" %>
        <%= f.text_field :search, :class => "input-medium", :data => {:search => true} %>
    <% end %>

        <%= submit_tag "Apply", :class => "btn" %>
        <%= submit_tag "Reset", :name => "reset", :class => "btn btn-link" %>
<% end %>
    </div>
</div>

<%= render "servers" %>

<%= link_to new_server_path(), :class => "btn btn-success" do %>
    <i class="icon-plus icon-white"></i> New server
<% end %>
