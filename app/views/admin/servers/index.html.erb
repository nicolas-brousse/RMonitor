<table class="table table-striped">
  <thead>
    <tr>
      <th width="5">#</th>
      <th width="10">Status</th>
      <th width="">Name</th>
      <th width="">Host</th>
      <th width="">Last synchronization</th>
      <th width=""></th>
    </tr>
  </thead>
  <tbody>
    <% @servers.each do |server| %>
    <tr>
      <td><%= server.id %></td>
      <td><span class="badge badge-<%= server.status ? 'success' : 'important' %>">&nbsp;</span></td>
      <td><%= link_to server.name, admin_server_path(server) %></td>
      <td><%= server.host %></td>
      <td><%= server.synchronized_at %></td>
      <td>
        <%= link_to "edit", edit_admin_server_path(server) %>
        <%= link_to "delete", admin_server_path(server), :data => {:confirm => "Are you sure?"}, :method => :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>